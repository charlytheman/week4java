// code for hard excercise
//define the mass and height for tom
var massTom = 8;
var heightTom = 9;

//define the mass and height for Jerry
var massJerry = 45;
var heightJerry = 10;

//calculating bmi for tom and jerry
var bmiTom = massTom / (heightTom * heightTom);
var bmiJerry = massJerry / (heightJerry * heightJerry);
console.log(bmiTom);
console.log(bmiJerry);

//intiialze boolean with true
let tomBmiHigher = true;
//if tom bmi is less
if (bmiTom < bmiJerry) {
	//set boolean to false
	tomBmiHigher = false;
}

console.log("Is Tom’s BMI higher than Jerry’s? " + tomBmiHigher);


